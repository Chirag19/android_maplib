<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background" android:layout_margin="16dp">

        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/combobox_spinner"
                android:spinnerMode="dialog"
                android:layout_margin="4dp"/>
    </RelativeLayout>

    <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/combobox_alt" android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp" android:layout_marginTop="4dp"
            android:background="@drawable/rounded_corner" android:padding="4dp"/>
</merge>
